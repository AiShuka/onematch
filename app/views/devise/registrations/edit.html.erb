<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card auth-card">
        <h2 class="text-center mb-4">プロフィール編集</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
          <div class="mb-3">
            <%= f.label :nickname, "ニックネーム", class: "form-label" %>
            <%= f.text_field :nickname, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :prefecture_id, "都道府県", class: "form-label" %>
            <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { prompt: "選択してください" }, class: "form-control form-select" %>
          </div>

          <div class="mb-3">
            <%= f.label :city, "市区町村", class: "form-label" %>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "新しいパスワード（変更しない場合は空欄）", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "新しいパスワード確認", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "現在のパスワード（変更には入力が必要）", class: "form-label" %>
            <%= f.password_field :current_password, class: "form-control", required: true %>
          </div>

          <%= f.submit "更新する", class: "btn btn-primary w-50 d-block mx-auto" %>
        <% end %>

        <div class="text-center mt-3">
          <%= link_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "text-danger d-block" %>
          <%= link_to "戻る", root_path, class: "d-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
